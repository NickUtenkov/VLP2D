<Application x:Class="VLP2D.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:VLP2D"
	DispatcherUnhandledException="Application_DispatcherUnhandledException"
	StartupUri="View\MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverterKey"/>
			<local:BoolToNoVisibilityConverter x:Key="BoolToNoVisibilityConverterKey"/>
			<local:MultiBoolToNoVisibilityConverter x:Key="MultiBoolToNoVisibilityConverterKey"/>
			<local:TextToVisibilityConverter x:Key="TextToVisibilityConverterKey"/>
			<local:EnumConverter x:Key="EnumConverterKey"/>
			<local:IntToStringConverter x:Key="IntToStringConverterKey"/>
			<Style x:Key="MyButtonStyle" TargetType="Button">
				<Setter Property="OverridesDefaultStyle" Value="True"/>
				<Setter Property="Cursor" Value="Hand" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border Name="border" 
								BorderThickness="1"
								Padding="4,2" 
								BorderBrush="DarkGray" 
								CornerRadius="5" 
								Background="{TemplateBinding Background}">
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="border" Property="BorderBrush" Value="White" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="greenGradBrush">
				<GradientStop Color="#7AC13F"/>
				<GradientStop Color="#9ECC59" Offset="1"/>
			</LinearGradientBrush>
			<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="greenGradBrushReverse">
				<GradientStop Color="#9ECC59"/>
				<GradientStop Color="#7AC13F" Offset="1"/>
			</LinearGradientBrush>

			<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="redGradBrush">
				<GradientStop Color="#E67A59"/>
				<GradientStop Color="#E85C4D" Offset="1"/>
			</LinearGradientBrush>
			<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="redGradBrushReverse">
				<GradientStop Color="#E85C4D"/>
				<GradientStop Color="#E67A59" Offset="1"/>
			</LinearGradientBrush>

			<Style TargetType="Button" x:Key="btnGreenStyle" BasedOn="{StaticResource MyButtonStyle}">
				<Style.Setters>
					<Setter Property="Background" Value="{StaticResource greenGradBrush}" />
					<Setter Property="FontSize" Value="14" />
					<Setter Property="Foreground" Value="#FFFFFF" />
				</Style.Setters>
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="{StaticResource greenGradBrushReverse}"/>
					</Trigger>
				</Style.Triggers>
			</Style>

			<Style TargetType="Button" x:Key="btnRedStyle" BasedOn="{StaticResource MyButtonStyle}">
				<Setter Property="Background" Value="{StaticResource redGradBrush}" />
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="#FFFFFF" />
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="{StaticResource redGradBrushReverse}"/>
					</Trigger>
				</Style.Triggers>
			</Style>

			<Style TargetType="ListViewItem" x:Key="ListItemStyle">
				<Setter Property="Padding" Value="0"/>
				<!--<Setter Property="Margin" Value="0,-4"/>-->
				<Setter Property="HorizontalAlignment" Value="Stretch"/>
				<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			</Style>

			<Style TargetType="CheckBox" x:Key="checkBoxStyle">
				<Setter Property="Foreground" Value="#000000"/>
				<Setter Property="LayoutTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="1.4" ScaleY="1.4" />
					</Setter.Value>
				</Setter>
			</Style>

			<Style TargetType="ComboBox" x:Key="resComboStyleWidth180">
				<Setter Property="FontSize" Value="15" />
				<Setter Property="Foreground" Value="#000000" />
				<Setter Property="Width" Value="180" />
				<Setter Property="Height" Value="26" />
			</Style>
			<Style TargetType="ComboBox" x:Key="resComboStyleWidth245">
				<Setter Property="FontSize" Value="15" />
				<Setter Property="Foreground" Value="#000000" />
				<Setter Property="Width" Value="245" />
				<Setter Property="Height" Value="24" />
			</Style>
			<DataTemplate x:Key="taskItemTemplate">
				<TextBlock Text="{Binding name}" FontSize="15"/>
			</DataTemplate>

		</ResourceDictionary>
	</Application.Resources>
</Application>
